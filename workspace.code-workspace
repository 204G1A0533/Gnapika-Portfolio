#JavaScript file

document.addEventListener('DOMContentLoaded', function() {
    // Add a click event to project titles to show/hide project details
    const projectTitles = document.querySelectorAll('.Major.project h3, .Mini.Projects h3');
    projectTitles.forEach(title => {
        title.addEventListener('click', () => {
            const projectDetails = title.nextElementSibling;
            projectDetails.classList.toggle('show');
        });
    });
});
